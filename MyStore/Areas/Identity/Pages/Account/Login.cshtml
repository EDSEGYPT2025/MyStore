@page
@model LoginModel

@{
    ViewData["Title"] = "تسجيل الدخول";
    // === التحسين الأهم: جعل الصفحة مستقلة تمامًا ===
    Layout = null;
}

<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MyStore</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.rtl.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@400;600;700;900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" />
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />

    <!-- === CSS مخصص لتحقيق المظهر الاحترافي === -->
    <style>
        body {
            background-color: #f4f7f9; /* Set a light background for the whole page */
        }

        .login-container {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            min-height: 80vh;
            overflow: hidden;
            margin: 2rem auto; /* Center the container */
            max-width: 1200px;
            border-radius: 15px;
            box-shadow: 0 10px 40px rgba(0,0,0,0.1);
            background-color: #fff;
        }

        .login-branding {
            background: linear-gradient(135deg, #007bff, #0056b3);
            color: white;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            padding: 3rem;
            text-align: center;
        }

            .login-branding h1 {
                font-weight: 900;
                font-size: 3rem;
                margin-bottom: 1rem;
            }

            .login-branding p {
                font-size: 1.1rem;
                max-width: 350px;
            }

        .login-form-container {
            padding: 3rem;
            display: flex;
            flex-direction: column;
            justify-content: center;
        }

            .login-form-container h2 {
                font-weight: 700;
                margin-bottom: 0.5rem;
            }

            .login-form-container .text-muted {
                margin-bottom: 2rem;
            }

        @@media (max-width: 991.98px) {
            .login-container {
                grid-template-columns: 1fr;
                margin-top: 1rem;
                min-height: auto;
            }

            .login-branding {
                display: none;
            }

            .login-form-container {
                padding: 2rem;
            }
        }
    </style>
</head>
<body>

    <div class="container">
        <div class="login-container">
            <div class="login-branding">
                <h1>MyStore</h1>
                <p>مرحباً بعودتك! قم بتسجيل الدخول لإدارة متجرك والوصول إلى كل الميزات.</p>
            </div>
            <div class="login-form-container">
                <h2>تسجيل الدخول</h2>
                <p class="text-muted">الرجاء إدخال بيانات حسابك للمتابعة.</p>
                <section>
                    <form id="account" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                            <label asp-for="Input.Email" class="form-label">البريد الإلكتروني</label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                            <label asp-for="Input.Password" class="form-label">كلمة المرور</label>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <div class="form-check">
                                <input class="form-check-input" asp-for="Input.RememberMe" />
                                <label asp-for="Input.RememberMe" class="form-check-label">
                                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                                </label>
                            </div>
                            <a id="forgot-password" asp-page="./ForgotPassword" class="small">نسيت كلمة المرور؟</a>
                        </div>

                        <div class="d-grid gap-2">
                            <button id="login-submit" type="submit" class="btn btn-primary btn-lg">تسجيل الدخول</button>
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="btn btn-outline-secondary">إنشاء حساب جديد</a>
                        </div>
                    </form>
                </section>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <partial name="_ValidationScriptsPartial" />
</body>
</html>

