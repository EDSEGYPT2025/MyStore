@page
@model LoginModel

@{
    ViewData["Title"] = "تسجيل الدخول";
    Layout = null; // This makes the page completely standalone
}

<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MyStore</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.rtl.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@400;600;700;900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" />

    <style>
        body {
            background-color: #f4f7f9;
            display: flex;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
            font-family: 'Cairo', sans-serif;
        }

        .login-card {
            display: grid;
            grid-template-columns: 45% 55%;
            width: 100%;
            max-width: 900px;
            border-radius: 1rem;
            box-shadow: 0 15px 50px rgba(0,0,0,0.1);
            overflow: hidden;
            background-color: #fff;
        }

        .login-branding {
            background: linear-gradient(135deg, #0d6efd, #0056b3);
            color: white;
            padding: 3rem;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            text-align: center;
        }

            .login-branding h1 {
                font-weight: 900;
                font-size: 3rem;
                margin-bottom: 1rem;
            }

        .login-form-container {
            padding: 3rem;
            display: flex;
            flex-direction: column;
            justify-content: center;
        }

            .login-form-container h2 {
                font-weight: 700;
            }

            .login-form-container .text-muted {
                margin-bottom: 2rem;
            }

        .form-floating > .form-control:focus ~ label {
            color: #0d6efd;
        }

        .btn-primary {
            padding: 0.75rem;
            font-weight: 600;
        }

        @@media (max-width: 767.98px) {
            .login-card {
                grid-template-columns: 1fr;
            }

            .login-branding {
                display: none;
            }

            .login-form-container {
                padding: 2rem;
            }
        }
    </style>
</head>
<body>

    <main class="container">
        <div class="login-card">
            <div class="login-branding">
                <i class="fas fa-store-alt fa-3x mb-3"></i>
                <h1>MyStore</h1>
                <p>مرحباً بعودتك! قم بتسجيل الدخول للوصول إلى لوحة التحكم الخاصة بك.</p>
            </div>

            <div class="login-form-container">
                <h2>تسجيل الدخول</h2>
                <p class="text-muted">الرجاء إدخال بيانات حسابك للمتابعة.</p>

                <section>
                    <form id="account" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger small mb-3" role="alert"></div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                            <label asp-for="Input.Email" class="form-label">البريد الإلكتروني</label>
                            <span asp-validation-for="Input.Email" class="text-danger small"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                            <label asp-for="Input.Password" class="form-label">كلمة المرور</label>
                            <span asp-validation-for="Input.Password" class="text-danger small"></span>
                        </div>

                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <div class="form-check">
                                <input class="form-check-input" asp-for="Input.RememberMe" />
                                <label asp-for="Input.RememberMe" class="form-check-label">
                                    تذكرني
                                </label>
                            </div>
                            <a id="forgot-password" asp-page="./ForgotPassword" class="small text-decoration-none">نسيت كلمة المرور؟</a>
                        </div>

                        <div class="d-grid">
                            <button id="login-submit" type="submit" class="btn btn-primary btn-lg">تسجيل الدخول</button>
                        </div>

                    </form>
                </section>
            </div>
        </div>
    </main>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <partial name="_ValidationScriptsPartial" />
</body>
</html>