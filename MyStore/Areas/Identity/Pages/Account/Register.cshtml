@page
@model RegisterModel
@{
    ViewData["Title"] = "التسجيل معطل";
    Layout = null; // يجعل الصفحة مستقلة
}

<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MyStore</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.rtl.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@400;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" />
    <style>
        body {
            background-color: #f4f7f9;
            display: flex;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
            font-family: 'Cairo', sans-serif;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-7">
                <div class="card shadow-sm text-center border-0">
                    <div class="card-body p-5">
                        <i class="fas fa-user-lock text-danger fa-4x mb-4"></i>
                        <h1 class="h3 fw-bold mb-3">خاصية تسجيل مستخدم جديد معطلة</h1>
                        <p class="text-muted mb-4">
                            لا يمكن إنشاء حسابات جديدة في الوقت الحالي. يتم إنشاء حسابات المدراء وأصحاب المتاجر فقط من خلال لوحة تحكم الأدمن لضمان أمان النظام.
                        </p>
                        <a class="btn btn-primary btn-lg" asp-page="./Login">
                            <i class="fas fa-sign-in-alt me-2"></i>الذهاب إلى صفحة تسجيل الدخول
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>