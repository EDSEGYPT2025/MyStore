@page
@model MyStore.Pages.Admin.Companies.IndexModel
@{
    ViewData["Title"] = "إدارة الشركات";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-page="Create" class="btn btn-primary">إضافة شركة جديدة</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>اسم الشركة</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Company)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @* Add Edit and Delete links here if needed *@
                    <a asp-page="./Edit" asp-route-id="@item.Id">تعديل</a> |
                    <a asp-page="./Details" asp-route-id="@item.Id">تفاصيل</a> |
                    <a asp-page="./Delete" asp-route-id="@item.Id">حذف</a>
                </td>
            </tr>
        }
    </tbody>
</table>
