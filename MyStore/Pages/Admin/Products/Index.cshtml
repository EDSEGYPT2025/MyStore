@page
@model MyStore.Pages.Admin.Products.IndexModel

@{
    ViewData["Title"] = "إدارة المنتجات";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-page="Create" class="btn btn-primary">إضافة منتج جديد</a>
</p>
<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>الصورة</th>
            <th>اسم المنتج</th>
            <th>الشركة</th>
            <th>السعر</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Product)
        {
            <tr>
                <td>
                    <img src="@(item.ImageUrl ?? "/images/placeholder.png")" style="width: 70px; height: 70px; object-fit: cover; border-radius: 5px;" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Company.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">تعديل</a> |
                    <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info">تفاصيل</a> |
                    <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">حذف</a>
                </td>
            </tr>
        }
    </tbody>
</table>
