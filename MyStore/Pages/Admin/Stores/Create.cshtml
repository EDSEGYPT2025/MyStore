@page
@model MyStore.Pages.Admin.Stores.CreateModel
@{
    ViewData["Title"] = "إضافة متجر جديد";
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="h3 mb-0">@ViewData["Title"]</h1>
        <p class="text-muted small mb-0">قم بملء البيانات التالية لإنشاء سجل لمتجر جديد في النظام.</p>
    </div>
    <a asp-page="./Index" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-right me-2"></i>العودة لقائمة المتاجر
    </a>
</div>

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card shadow-sm">
            <div class="card-header">
                <h5 class="mb-0 d-flex align-items-center">
                    <i class="fas fa-plus-circle me-2"></i>
                    بيانات المتجر الجديد
                </h5>
            </div>
            <div class="card-body p-4">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3 small"></div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.Name" class="form-control" placeholder="اسم المتجر" />
                        <label asp-for="Input.Name"></label>
                        <span asp-validation-for="Input.Name" class="text-danger small"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.OwnerName" class="form-control" placeholder="اسم المالك" />
                        <label asp-for="Input.OwnerName"></label>
                        <span asp-validation-for="Input.OwnerName" class="text-danger small"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.OwnerPhone" class="form-control" placeholder="رقم هاتف المالك" />
                        <label asp-for="Input.OwnerPhone"></label>
                        <span asp-validation-for="Input.OwnerPhone" class="text-danger small"></span>
                    </div>

                    <div class="mt-4 d-flex justify-content-end">
                        <a asp-page="Index" class="btn btn-secondary me-2">إلغاء</a>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save me-2"></i>حفظ وإنشاء المتجر
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}