@page "{id:int?}"
@model MyStore.Pages.Admin.Stores.ManageUsersModel
@{
    ViewData["Title"] = $"إدارة مستخدمي - {Model.Store.Name}";
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3">@ViewData["Title"]</h1>
    <a asp-page="./Index" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-right me-2"></i>العودة لقائمة المتاجر
    </a>
</div>

<div class="row">
    <!-- قائمة المستخدمين الحاليين -->
    <div class="col-lg-7">
        <div class="card shadow-sm">
            <div class="card-header">
                <h5 class="mb-0">المستخدمون الحاليون</h5>
            </div>
            <div class="card-body p-0">
                @if (Model.StoreUsers.Any())
                {
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>الاسم الكامل</th>
                                <th>البريد الإلكتروني</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in Model.StoreUsers)
                            {
                                <tr>
                                    <td>@user.FullName</td>
                                    <td>@user.Email</td>
                                    <td class="text-end">
                                        @* يمكنك إضافة أزرار للتعديل أو الحذف هنا مستقبلًا *@
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <div class="p-4 text-center text-muted">
                        <i class="fas fa-users-slash fa-2x mb-3"></i>
                        <p>لا يوجد مستخدمون مضافون لهذا المتجر بعد.</p>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- فورم إضافة مستخدم جديد -->
    <div class="col-lg-5">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0"><i class="fas fa-user-plus me-2"></i>إضافة مدير جديد للمتجر</h5>
            </div>
            <div class="card-body">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    <input type="hidden" asp-for="Input.StoreId" />

                    <div class="mb-3">
                        <label asp-for="Input.FullName" class="form-label"></label>
                        <input asp-for="Input.FullName" class="form-control" />
                        <span asp-validation-for="Input.FullName" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Input.Email" class="form-label"></label>
                        <input asp-for="Input.Email" class="form-control" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Input.Password" class="form-label"></label>
                        <input asp-for="Input.Password" class="form-control" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="fas fa-save me-2"></i>حفظ وإنشاء الحساب
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
