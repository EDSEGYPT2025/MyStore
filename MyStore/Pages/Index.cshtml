@page "/{storeSlug}"
@model MyStore.Pages.IndexModel
@{
    ViewData["Title"] = Model.CurrentStore.Name;
}

<!-- حقل مخفي لتخزين معرّف المتجر الحالي ليتم استخدامه في جافاسكريبت -->
<input type="hidden" id="current-store-id" value="@Model.CurrentStore.Id" />

<div class="store-container">

    <!-- Section: Header and Search -->
    <header class="store-header text-center">
        @if (!string.IsNullOrEmpty(Model.CurrentStore.LogoUrl))
        {
            <img src="@Model.CurrentStore.LogoUrl" alt="Logo for @Model.CurrentStore.Name" class="store-main-logo mb-3" style="max-height: 120px; border-radius: 50%;" />
        }
        <h1>@Model.CurrentStore.Name</h1>
        <p class="lead text-muted">تصفح أحدث المنتجات المتوفرة لدينا</p>
        <div class="search-bar-container mx-auto mt-4">
            <input type="search" id="product-search-input" class="form-control form-control-lg" placeholder="ابحث عن منتج...">
            <i class="fas fa-search search-icon"></i>
        </div>
    </header>

    <!-- Section: Main Content (Store Layout) -->
    <div class="row mt-5">
        <!-- Main Area: Companies and Products -->
        <div class="col-lg-9">
            <!-- Companies List (acts as filters) -->
            @if (Model.Companies.Any())
            {
                <section id="companies-section" class="mb-5">
                    <h3 class="section-title">تصفح حسب الماركة</h3>
                    <div id="companies-list" class="d-flex flex-wrap gap-3">
                        <button class="company-card-btn active" data-company-id="0">
                            <span class="company-name">الكل</span>
                        </button>
                        @foreach (var company in Model.Companies)
                        {
                            <button class="company-card-btn" data-company-id="@company.Id">
                                <span class="company-name">@company.Name</span>
                            </button>
                        }
                    </div>
                </section>
            }

            <!-- Products List -->
            <section id="products-section">
                <h3 class="section-title">المنتجات</h3>
                <div id="products-list" class="row gx-4 gy-4">
                    @if (!Model.Products.Any())
                    {
                        <div class="col-12">
                            <div class="alert alert-info text-center">لا توجد منتجات لعرضها في هذا المتجر حالياً.</div>
                        </div>
                    }
                    else
                    {
                        @foreach (var product in Model.Products)
                        {
                            <div class="col-md-4 product-card-wrapper" data-company-id="@product.CompanyId">
                                <div class="card product-card h-100 shadow-sm border-0">
                                    <img src="@(product.ImageUrl ?? "https://placehold.co/600x400/EEE/31343C?text=Product")" class="card-img-top" alt="@product.Name" style="object-fit: cover; height: 200px;">
                                    <div class="card-body d-flex flex-column">
                                        <h5 class="card-title flex-grow-1">@product.Name</h5>
                                        <div class="mt-auto">
                                            <p class="card-text price fs-4 fw-bold text-primary">@product.Price.ToString("N2") جنيه</p>
                                            <button class="btn btn-outline-primary w-100 add-to-cart-btn"
                                                    data-product-id="@product.Id"
                                                    data-product-name="@product.Name"
                                                    data-product-price="@product.Price"
                                                    data-product-image="@(product.ImageUrl ?? "https://placehold.co/600x400/EEE/31343C?text=Product")">
                                                <i class="fas fa-cart-plus me-1"></i> إضافة للسلة
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                </div>
            </section>
        </div>

        <!-- === DESKTOP ONLY: Shopping Cart Sidebar === -->
        <div class="col-lg-3 d-none d-lg-block">
            <aside id="cart-sidebar" class="sticky-top">
                <div class="cart-header"><h5><i class="fas fa-shopping-cart me-2"></i>سلة المشتريات</h5></div>
                <div class="cart-body">
                    <div id="cart-items"></div>
                    <p class="cart-empty-msg text-center text-muted">سلتك فارغة حالياً.</p>
                </div>
                <div class="cart-footer">
                    <div class="d-flex justify-content-between align-items-center"><strong>الإجمالي</strong><strong><span id="cart-total">0.00</span> جنيه</strong></div>
                    <!-- === الإصلاح النهائي: تم تغيير id إلى class === -->
                    <div class="d-grid mt-3"><button class="btn btn-success btn-lg w-100 checkout-btn" disabled><i class="fab fa-whatsapp me-2"></i>إتمام الطلب</button></div>
                </div>
            </aside>
        </div>
    </div>
</div>

<!-- === MOBILE ONLY: Floating Cart Button === -->
<button id="mobile-cart-btn" class="btn btn-primary d-lg-none" data-bs-toggle="modal" data-bs-target="#cartModal">
    <i class="fas fa-shopping-cart"></i>
    <span id="mobile-cart-count" class="badge bg-danger rounded-pill">0</span>
</button>

<!-- === MODALS === -->
<div class="modal fade" id="cartModal" tabindex="-1" aria-labelledby="cartModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content" id="mobile-cart-content"></div>
    </div>
</div>

<div class="modal fade" id="checkoutModal" tabindex="-1" aria-labelledby="checkoutModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="checkoutModalLabel">بيانات التوصيل</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="checkout-form" novalidate>
                    @Html.AntiForgeryToken()
                    <div class="mb-3"><label for="customer-name" class="form-label">الاسم الكامل</label><input type="text" class="form-control" id="customer-name" required></div>
                    <div class="mb-3"><label for="customer-phone" class="form-label">رقم الهاتف</label><input type="tel" class="form-control" id="customer-phone" required></div>
                    <div class="mb-3"><label for="customer-address" class="form-label">العنوان بالتفصيل</label><textarea class="form-control" id="customer-address" rows="3" required></textarea></div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">إلغاء</button>
                <button type="button" id="confirm-order-btn" class="btn btn-primary">تأكيد الطلب عبر واتساب</button>
            </div>
        </div>
    </div>
</div>

