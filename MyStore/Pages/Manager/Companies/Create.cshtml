@page
@model MyStore.Pages.Manager.Companies.CreateModel
@{
    ViewData["Title"] = "إضافة ماركة جديدة";
    Layout = "~/Pages/Shared/_ManagerLayout.cshtml";
}

<div class="flex flex-col sm:flex-row justify-between items-start sm:items-center mb-6 gap-4">
    <div>
        <h1 class="text-2xl lg:text-3xl font-bold text-foreground">@ViewData["Title"]</h1>
        <p class="text-muted-foreground mt-1">أضف ماركة تجارية جديدة لإدارة منتجاتك بفعالية.</p>
    </div>
    <a asp-page="Index" class="inline-flex items-center px-4 py-2 bg-muted text-muted-foreground text-sm font-medium rounded-md hover:bg-muted/80">
        <i data-lucide="arrow-right" class="w-4 h-4 me-2"></i>
        <span>العودة للقائمة</span>
    </a>
</div>

<div class="max-w-2xl mx-auto">
    <form method="post" enctype="multipart/form-data" class="bg-card text-card-foreground rounded-xl border shadow-sm">
        <div class="p-6 space-y-6">
            <div asp-validation-summary="ModelOnly" class="text-sm text-destructive"></div>

            <div>
                <label asp-for="Input.Name" class="block text-sm font-medium text-foreground mb-1"></label>
                <input asp-for="Input.Name" class="w-full px-3 py-2 border border-input rounded-lg bg-transparent focus:ring-2 focus:ring-primary" placeholder="اكتب اسم الماركة هنا..." />
                <span asp-validation-for="Input.Name" class="text-xs text-destructive mt-1"></span>
            </div>

            <div>
                <label asp-for="Input.UploadedLogo" class="block text-sm font-medium text-foreground mb-1"></label>
                <input asp-for="Input.UploadedLogo" type="file" class="w-full text-sm text-muted-foreground
                    file:me-4 file:py-2 file:px-4
                    file:rounded-lg file:border-0
                    file:text-sm file:font-semibold
                    file:bg-primary/10 file:text-primary
                    hover:file:bg-primary/20 cursor-pointer" />
                <p class="text-xs text-muted-foreground mt-1">اختياري: اختر شعارًا واضحًا للماركة.</p>
            </div>
        </div>

        <div class="flex items-center justify-end gap-3 px-6 py-4 bg-muted/50 border-t">
            <a asp-page="Index" class="px-4 py-2 text-sm font-medium rounded-md hover:bg-muted">إلغاء</a>
            <button type="submit" class="inline-flex items-center px-4 py-2 bg-primary text-primary-foreground font-semibold rounded-md shadow-sm hover:bg-primary/90">
                <i data-lucide="save" class="w-4 h-4 me-2"></i>
                حفظ الماركة
            </button>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}