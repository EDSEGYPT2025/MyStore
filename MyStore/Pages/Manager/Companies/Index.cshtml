@page
@model MyStore.Pages.Manager.Companies.IndexModel
@{
    ViewData["Title"] = "إدارة الماركات";
    Layout = "~/Pages/Shared/_ManagerLayout.cshtml";
}

<div class="flex flex-col sm:flex-row justify-between items-start sm:items-center mb-6 gap-4">
    <div>
        <h1 class="text-2xl lg:text-3xl font-bold text-foreground">@ViewData["Title"]</h1>
        <p class="text-muted-foreground mt-1">عرض وتعديل الماركات التجارية الخاصة بمتجرك.</p>
    </div>
    <a asp-page="Create" class="inline-flex items-center justify-center px-4 py-2 bg-primary text-primary-foreground font-semibold rounded-lg shadow-sm hover:bg-primary/90 transition-colors">
        <i data-lucide="plus" class="w-4 h-4 me-2"></i>
        <span>إضافة ماركة جديدة</span>
    </a>
</div>

<div class="bg-card text-card-foreground rounded-xl border shadow-sm overflow-hidden">
    @if (Model.CompanyList.Any())
    {
        <div class="overflow-x-auto">
            <table class="w-full text-sm text-right">
                <thead class="bg-muted/50">
                    <tr>
                        <th scope="col" class="px-6 py-4 font-medium" style="width: 100px;">الشعار</th>
                        <th scope="col" class="px-6 py-4 font-medium">اسم الماركة</th>
                        <th scope="col" class="px-6 py-4 font-medium text-left">الإجراءات</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-border">
                    @foreach (var item in Model.CompanyList)
                    {
                        <tr class="hover:bg-muted/50 transition-colors">
                            <td class="p-4">
                                @{
                                    // **هذا هو الإصلاح:** استخدام الرابط مباشرة لتجنب الخطأ
                                    var logoUrl = item.LogoUrl ?? "/images/placeholder.png";
                                }
                                <img src="@logoUrl" class="w-16 h-16 object-contain rounded-lg border bg-white" alt="@item.Name" />
                            </td>
                            <td class="px-6 py-4 align-middle font-semibold text-foreground">
                                @item.Name
                            </td>
                            <td class="px-6 py-4 align-middle text-left">
                                <a asp-page="./Edit" asp-route-id="@item.Id" class="text-primary hover:underline font-medium">تعديل</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="text-center p-12">
            <i data-lucide="building-2" class="mx-auto h-12 w-12 text-muted-foreground/50"></i>
            <h3 class="mt-4 text-lg font-medium text-foreground">لا توجد ماركات مضافة</h3>
            <p class="mt-1 text-sm text-muted-foreground">ابدأ بإضافة أول ماركة خاصة بمتجرك لعرضها هنا.</p>
            <div class="mt-6">
                <a asp-page="Create" class="inline-flex items-center justify-center px-4 py-2 bg-primary text-primary-foreground font-semibold rounded-lg shadow-sm hover:bg-primary/90">
                    <i data-lucide="plus" class="w-4 h-4 me-2"></i>
                    إضافة ماركة الآن
                </a>
            </div>
        </div>
    }
</div>