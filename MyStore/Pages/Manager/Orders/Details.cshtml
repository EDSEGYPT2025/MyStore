@page "{id:int}"
@model MyStore.Pages.Manager.Orders.DetailsModel
@{
    ViewData["Title"] = $"تفاصيل الطلب - {Model.Order.OrderNumber}";
    Layout = "~/Pages/Shared/_ManagerLayout.cshtml";
}

<div class="flex flex-col sm:flex-row justify-between items-start sm:items-center mb-6 gap-4">
    <div>
        <h1 class="text-2xl lg:text-3xl font-bold text-foreground">تفاصيل الطلب</h1>
        <p class="text-muted-foreground mt-1">
            أنت تستعرض الطلب رقم: <span class="font-semibold">@Model.Order.OrderNumber</span>
        </p>
    </div>
    <a asp-page="./Index" class="inline-flex items-center px-4 py-2 bg-muted text-muted-foreground text-sm font-medium rounded-md hover:bg-muted/80">
        <i data-lucide="arrow-right" class="w-4 h-4 me-2"></i>
        <span>العودة لقائمة الطلبات</span>
    </a>
</div>

<div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <div class="lg:col-span-1 space-y-6">
        <div class="bg-card text-card-foreground rounded-xl border shadow-sm">
            <div class="p-4 border-b">
                <h3 class="font-semibold flex items-center gap-2">
                    <i data-lucide="user" class="w-5 h-5 text-muted-foreground"></i>
                    بيانات العميل
                </h3>
            </div>
            <div class="p-4 space-y-3 text-sm">
                <div class="flex justify-between">
                    <span class="text-muted-foreground">الاسم:</span>
                    <span class="font-medium">@Model.Order.CustomerName</span>
                </div>
                <div class="flex justify-between">
                    <span class="text-muted-foreground">الهاتف:</span>
                    <span class="font-medium">@Model.Order.CustomerPhone</span>
                </div>
                <div class="flex flex-col text-right">
                    <span class="text-muted-foreground">العنوان:</span>
                    <span class="font-medium mt-1">@(Model.Order.CustomerAddress ?? "لم يتم توفيره")</span>
                </div>
            </div>
        </div>

        <div class="bg-card text-card-foreground rounded-xl border shadow-sm">
            <div class="p-4 border-b">
                <h3 class="font-semibold flex items-center gap-2">
                    <i data-lucide="file-text" class="w-5 h-5 text-muted-foreground"></i>
                    ملخص الطلب
                </h3>
            </div>
            <div class="p-4 space-y-3 text-sm">
                <div class="flex justify-between">
                    <span class="text-muted-foreground">رقم الطلب:</span>
                    <span class="font-medium">@Model.Order.OrderNumber</span>
                </div>
                <div class="flex justify-between">
                    <span class="text-muted-foreground">تاريخ الطلب:</span>
                    <span class="font-medium">@Model.Order.OrderDate.ToString("yyyy/MM/dd, hh:mm tt")</span>
                </div>
                <div class="pt-4 mt-4 border-t flex justify-between items-center">
                    <span class="text-base font-semibold text-muted-foreground">المبلغ الإجمالي:</span>
                    <span class="text-2xl font-bold text-green-600">@Model.Order.TotalAmount.ToString("N2") ج.م</span>
                </div>
            </div>
        </div>
    </div>

    <div class="lg:col-span-2 bg-card text-card-foreground rounded-xl border shadow-sm">
        <div class="p-4 border-b">
            <h3 class="font-semibold flex items-center gap-2">
                <i data-lucide="shopping-cart" class="w-5 h-5 text-muted-foreground"></i>
                المنتجات المطلوبة
            </h3>
        </div>
        <div class="overflow-x-auto">
            <table class="w-full text-sm text-right">
                <thead class="bg-muted/50">
                    <tr>
                        <th scope="col" class="px-6 py-3 font-medium">المنتج</th>
                        <th scope="col" class="px-6 py-3 font-medium text-center">الكمية</th>
                        <th scope="col" class="px-6 py-3 font-medium">سعر الوحدة</th>
                        <th scope="col" class="px-6 py-3 font-medium">الإجمالي الفرعي</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-border">
                    @foreach (var item in Model.OrderItems)
                    {
                        <tr class="hover:bg-muted/50 transition-colors">
                            <td class="px-6 py-4 font-semibold text-foreground">@item.ProductName</td>
                            <td class="px-6 py-4 text-center text-muted-foreground">@item.Quantity</td>
                            <td class="px-6 py-4 text-muted-foreground">@item.UnitPrice.ToString("N2") ج.م</td>
                            <td class="px-6 py-4 font-semibold">@item.TotalPrice.ToString("N2") ج.م</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        lucide.createIcons();
    </script>
}