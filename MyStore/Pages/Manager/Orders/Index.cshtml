@page
@model MyStore.Pages.Manager.Orders.IndexModel
@{
    ViewData["Title"] = "إدارة الطلبات";
    Layout = "~/Pages/Shared/_ManagerLayout.cshtml";
}

<h1 class="h3 mb-4">@ViewData["Title"]</h1>

<div class="card shadow-sm">
    <div class="card-body p-0">
        @if (Model.OrderList.Any())
        {
            <table class="table table-hover table-striped mb-0">
                <thead class="table-light">
                    <tr>
                        <th>رقم الطلب</th>
                        <th>اسم العميل</th>
                        <th>هاتف العميل</th>
                        <th>تاريخ الطلب</th>
                        <th>الإجمالي</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.OrderList)
                    {
                        <tr>
                            <td class="align-middle fw-bold">@item.OrderNumber</td>
                            <td class="align-middle">@item.CustomerName</td>
                            <td class="align-middle">@item.CustomerPhone</td>
                            <td class="align-middle">@item.OrderDate.ToString("g")</td>
                            <td class="align-middle">@item.TotalAmount.ToString("C", new System.Globalization.CultureInfo("ar-EG"))</td>
                            <td class="text-end align-middle">
                                <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info">عرض التفاصيل</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="p-4 text-center text-muted">
                <i class="fas fa-receipt fa-3x mb-3"></i>
                <p>لم تستقبل أي طلبات بعد.</p>
            </div>
        }
    </div>
</div>
