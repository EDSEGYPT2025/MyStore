@page "{id:int}"
@model MyStore.Pages.Manager.Products.DetailsModel
@{
    ViewData["Title"] = "تفاصيل المنتج";
    Layout = "~/Pages/Shared/_ManagerLayout.cshtml";
}

<div class="flex flex-col sm:flex-row justify-between items-start sm:items-center mb-6 gap-4">
    <div>
        <h1 class="text-2xl font-bold text-foreground">@ViewData["Title"]</h1>
        <p class="text-muted-foreground mt-1 truncate">
            أنت تستعرض حاليًا: <span class="font-semibold">@Model.Product.Name</span>
        </p>
    </div>
    <a asp-page="./Index" class="inline-flex items-center px-4 py-2 bg-muted text-muted-foreground text-sm font-medium rounded-md hover:bg-muted/80">
        <i data-lucide="arrow-right" class="w-4 h-4 me-2"></i>
        <span>العودة للقائمة</span>
    </a>
</div>

<div class="bg-card text-card-foreground rounded-xl border shadow-sm overflow-hidden">
    <div class="grid grid-cols-1 md:grid-cols-3">
        <div class="md:col-span-1 p-4">
            <img src="@Url.Content("~" + (Model.Product.ImageUrl ?? "/images/placeholder.png"))"
                 alt="@Model.Product.Name"
                 class="w-full h-auto aspect-square object-cover rounded-lg border">
        </div>

        <div class="md:col-span-2 p-6">
            <h2 class="text-3xl font-bold text-foreground">@Model.Product.Name</h2>
            <p class="text-lg text-muted-foreground mt-1">@Model.Product.Company.Name</p>

            <div class="my-4 border-t border-border"></div>

            <div class="mb-6">
                <p class="text-sm font-medium text-muted-foreground">السعر</p>
                <p class="text-4xl font-extrabold text-primary">
                    @Model.Product.Price.ToString("N2") <span class="text-2xl font-semibold">ج.م</span>
                </p>
            </div>

            <div>
                <h3 class="text-md font-semibold text-foreground mb-2">الوصف</h3>
                <div class="prose prose-sm dark:prose-invert max-w-none text-muted-foreground">
                    <p>
                        @(Model.Product.Description ?? "لا يوجد وصف متاح لهذا المنتج.")
                    </p>
                </div>
            </div>

            <div class="mt-6 pt-6 border-t border-border flex items-center gap-3">
                <a asp-page="./Edit" asp-route-id="@Model.Product.Id" class="inline-flex items-center justify-center px-4 py-2 bg-primary text-primary-foreground font-semibold rounded-lg shadow-sm hover:bg-primary/90">
                    <i data-lucide="file-pen-line" class="w-4 h-4 me-2"></i>
                    تعديل المنتج
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        lucide.createIcons();
    </script>
}