@page "{id:int}"
@model MyStore.Pages.Manager.Products.DetailsModel
@{
    ViewData["Title"] = "تفاصيل المنتج";
    Layout = "~/Pages/Shared/_ManagerLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3">@ViewData["Title"]: @Model.Product.Name</h1>
    <a asp-page="./Index" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-right me-2"></i>العودة لقائمة المنتجات
    </a>
</div>

<div class="card shadow-sm">
    <div class="row g-0">
        <div class="col-md-4">
            <img src="@(Model.Product.ImageUrl ?? "/images/placeholder.png")" class="img-fluid rounded-start" alt="@Model.Product.Name" style="object-fit: cover; height: 100%;">
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h3 class="card-title">@Model.Product.Name</h3>
                <hr>
                <dl class="row">
                    <dt class="col-sm-3">الماركة</dt>
                    <dd class="col-sm-9">@Model.Product.Company.Name</dd>

                    <dt class="col-sm-3">السعر</dt>
                    <dd class="col-sm-9 fw-bold fs-5 text-success">@Model.Product.Price.ToString("C", new System.Globalization.CultureInfo("ar-EG"))</dd>

                    <dt class="col-sm-3">الوصف</dt>
                    <dd class="col-sm-9">
                        <p style="white-space: pre-wrap;">@(Model.Product.Description ?? "لا يوجد وصف متاح.")</p>
                    </dd>
                </dl>
                <hr>
                <div class="mt-3">
                    <a asp-page="./Edit" asp-route-id="@Model.Product.Id" class="btn btn-primary">
                        <i class="fas fa-pencil-alt me-2"></i>تعديل
                    </a>
                    <a asp-page="./Index" class="btn btn-secondary">العودة للقائمة</a>
                </div>
            </div>
        </div>
    </div>
</div>
